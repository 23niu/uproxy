{
  "manifest_version": 2,
  "name": "UProxyExt",
  "description": "Alpha: Ubiquitous Chrome Proxy Picker",
  "version": "0.0.1",
  "icons": {
    "128": "images/uproxy-128.png",
    "19": "images/uproxy-19.png",
    "16": "images/uproxy-16.png"
  },

  "background": {
    "persistent": true,
    "scripts": ["js/plumbing.js", "js/unfreedom.js", "js/background.js"]
  },

  "permissions": [
    "https://accounts.google.com/o/oauth2/token",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.google.com/robots.txt*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": "images/uproxy-128.png",
    "default_popup": "popup.html"
  }
}
